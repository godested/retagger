{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "noEmit": true,
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "baseUrl": "./src"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "babel.config.js", "jest.config.js"]
}
